{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/Clurd/Clurd/Clurd.csproj"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "test",
            "command": "dotnet",
            "type": "process",         
            "group": "test",   
            "args": [
                "test",
                "${workspaceFolder}/Clurd.Tests/Clurd.Tests.csproj"
            ],
            "problemMatcher": "$msCompile"
        }
    ]
}